{
    "name": "jerodev/data-mapper",
    "description": "Maps JSON data to a typed PHP object",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jeroen Deviaene",
            "email": "jeroen@deviaene.eu"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Jerodev\\DataMapper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jerodev\\DataMapper\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "phpstan/phpstan": "^0.12.53"
    },
    "config": {
        "sort-packages": true
    }
}
